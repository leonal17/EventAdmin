@model EventAdmin.ViewModels.ConcertFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Concerts"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(t => t.Venue, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(t => t.Date, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(t => t.Time, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(t => t.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
